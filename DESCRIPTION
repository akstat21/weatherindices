Package: weatherindices
Title: Calculate Weather Indices
Version: 0.1.0
Authors@R: c(
    person("Akhilesh Kumar", "Gupta",,"akhileshgupta.ouat@gmail.com", role =  c("aut","cph","cre"),
           comment = c(ORCID = "0000-0001-9380-1103")),
    person("Kader Ali", "Sarkar",,"kader804@gmail.com", role ="ths"),
